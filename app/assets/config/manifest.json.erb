{
  "background_color": "white",
  "description": "TrackMyPlate - Suivez vos repas et habitudes alimentaires facilement.",
  "display": "fullscreen",
  "name": "TrackMyPlate",
  "short_name": "TrackMyPlate",
  "start_url": "/",
  "theme_color": "#ffffff",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
